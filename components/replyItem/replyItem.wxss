/* components/replyItem.wxss */

.item {
  display: flex;
  align-self: flex-start;
  margin-top: 10px;
}

.icon {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  flex: none;
}

.right-view {
  display: block;
  margin-left: 15px;
}

.icon-view {
  display: flex;
  align-items: center;
}

.name-view {
  display: flex;
  flex-direction: column;
  height: 50px;
  justify-content: space-around;
}

.name {
  color: whitesmoke;
  font-size: 16px;
}

.time {
  color: whitesmoke;
  font-size: 12px;
}

.reply {
  display: -webkit-box;
  color: whitesmoke;
  word-break: break-all;
}
